  {{#if model.filtre}}

  {{else}}
    <button {{action "cancelDelete" model}} type="button" class="btn btn-danger ajoutBtn">
      {{plural model.deletedsCount}}
    </button>
  {{/if}}
{{/if}}
<br>
<br>
<p class="text-center" style="font-weight: bold">
