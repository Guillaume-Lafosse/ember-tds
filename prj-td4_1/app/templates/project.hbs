<h2 class="ui header">
  <i class="folder open"></i>
  <div class="content">
    {{model.name}}
    <div class="sub header">{{model.descriptif}}</div>
  </div>
</h2>
<h3 class="ui header">Stories</h3>
{{#link-to "story.new" model.id class="ui button"}}
  <i class="ui plus icon"></i>
Ajouter une story au projet...
{{/link-to}}
{{#link-to "project.board" class="ui teal button"}}<i class="calendar alternate icon"></i>
Dashboard
{{/link-to}}
{{#link-to "projects" class="ui button"}}<i class="caret square left"></i>Retour Ã  la page des projets{{/link-to}}
<div class="ui divider"></div>
<div class="ui middle aligned divided list">
  {{#each model.stories as |story|}}
  <div class="item">
    <div class="right floated content">
      <div class="ui left labeled button" tabindex="0">
        <a class="ui basic right label">
          {{story.developer.identity}}
        </a>
        <div class="ui button">
         {{#link-to "stories.edit" story.id}}<i class="user "></i> Modifier...{{/link-to}}
        </div>
      </div>
    </div>
    <i class="big file middle aligned"></i>
    <div class="content">
      <div class="header">
        {{story.code}}
      </div>
      <div class="description">
        {{story.description}}
        {{#each story.tags as |tag|}}
          <a class="ui {{tag.color}} label">{{tag.title}}</a>
        {{/each}}
      </div>
    </div>
  </div>
 {{/each}}
</div>
{{outlet}}