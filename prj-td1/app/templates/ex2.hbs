<center>
  <div class="container rounded" style="background-color: #61a1bc;box-shadow: 0 1px 1px #ccc; width: 25%;padding: 30px">
<h1 style="font-family: 'Century gothic', cursive;text-shadow: 0 3px 0 rgba(0,0,0,0.1);color: #fff;">Services</h1>
    <h5 style="margin-bottom: 15px;font:20px/1.3 'Century gothic'">{{plural model.countActive}}</h5>
  {{#each model.services as |service|}}
      {{#if service.active}}

      <button {{action "toggleService" service}} class="btn-lg btn active" style="margin-bottom: 5px;margin-top:5px;width: 80%;line-height: 2.5em;background-color: #8ec16d;color: #FFFFFF;font:20px/1.3
      'Century gothic', sans-serif;font-weight: bold">

        {{service.name}} {{format-currency service.price sign="€"}}
    </button><br>

      {{else}}
    <button class="btn btn-lg" style="width: 80%;margin-bottom: 5px;margin-top:5px;line-height: 2.5em;background-color: #777;
    color: #FFFFFF;font:20px/1.3 'Century gothic', sans-serif;font-weight: bold"
      {{action "toggleService" service}}>

      {{service.name}} {{format-currency service.price sign="€"}}
    </button><br>

      {{/if}}
{{/each}}
<hr color="#FFFFFF">
<h3 style="color:#FFFFFF;margin-top: 25px;font:20px/1.3 'Century gothic'">Total: {{format-currency model.sumActive sign="€"}}</h3>
    {{input name="check" type="checkbox" checked=model.codePromo change=(action "enableCodePromo" model)}}
{{input placeholder="Code promo" key-press=(action "verifCodePromo")}}
  </div>
</center>

{{outlet}}